<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="ChiaPlotStatus.Views.LogViewerWindow"
        Icon="/GUI/Assets/Logo.png"
        TransparencyLevelHint="Transparent"
        ExtendClientAreaToDecorationsHint="False"
        Title="Log Viewer">

  <!--
	<Window.DataContext>
		<vm:MainWindowViewModel/>
	</Window.DataContext>
  -->
	<Window.Styles>
    <Style Selector="StackPanel.LogLines StackPanel.Line TextBlock.Level0">
      <Setter Property="FontWeight" Value="Normal" />
      <Setter Property="Foreground" Value="Gray" />
    </Style>
    <Style Selector="StackPanel.LogLines StackPanel.Line TextBlock.Level1">
      <Setter Property="FontWeight" Value="Bold" />
      <Setter Property="Foreground" Value="Black" />
    </Style>
    <Style Selector="StackPanel.LogLines StackPanel.Line TextBlock.Level2">
      <Setter Property="FontWeight" Value="Bold" />
      <Setter Property="Foreground" Value="DarkBlue" />
    </Style>
	</Window.Styles>

  <Panel Name="WindowContext">
    <StackPanel>
      <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
          <ExperimentalAcrylicBorder.Material>
            <ExperimentalAcrylicMaterial
						  BackgroundSource="Digger"
						  TintColor="Black"
						  TintOpacity="0.2"
						  MaterialOpacity="0.25" />
          </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
      </Panel>


      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Log file: " FontWeight="Bold"></TextBlock>
        <TextBlock Text="{Binding Path}"></TextBlock>
      </StackPanel>

      <TextBlock Text="" Margin="5"></TextBlock>
      <ScrollViewer Name="Log" Height="650">
        <ItemsRepeater Items="{Binding Lines}">
          <ItemsRepeater.ItemTemplate>
            <DataTemplate>
              <StackPanel Classes="Line" Orientation="Horizontal">
                <ItemsRepeater Items="{Binding}">
                  <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                      <!-- Binding to Classes directly not supported, Classes.MyClass="{Binding IsMyClassEnabled}" is -->
                      <TextBlock Text="{Binding Text}"
                                  Classes.Level0="{Binding Level0}"
                                  Classes.Level1="{Binding Level1}"
                                  Classes.Level2="{Binding Level2}"
                                  Classes.Level3="{Binding Level3}"
                                  Classes.Level4="{Binding Level4}"
                                  Classes.Level5="{Binding Level5}"
                    ></TextBlock>
                    </DataTemplate>
                  </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
              </StackPanel>
            </DataTemplate>
          </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>
      </ScrollViewer>
    </StackPanel>
	</Panel>
</Window>
